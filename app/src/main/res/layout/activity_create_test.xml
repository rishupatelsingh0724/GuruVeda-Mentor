<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.CreateTestActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewCreateTest"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="Create Test"
                android:textSize="24sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/editTextSubjects"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter Test Subject"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <!-- Test Title -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/editTextTestTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter Test Title"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <!-- Test Description -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/editTextTestDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Enter Test Description"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <!-- Time Duration -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/editTextTimeDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Enter Time Duration"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Save Button -->
            <Button
                android:id="@+id/buttonSaveTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Save Test" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>