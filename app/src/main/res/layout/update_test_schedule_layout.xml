<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/updateTextSubjects"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter Test Subject"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <!-- Test Title -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/updateTextTestTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter Test Title"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <!-- Test Description -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/updateTextTestDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Enter Test Description"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <!-- Time Duration -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/updateTextTimeDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Enter Time Duration"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>


</LinearLayout>