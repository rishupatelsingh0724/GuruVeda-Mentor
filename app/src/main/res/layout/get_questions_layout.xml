<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textViewQuestion"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:hint="Enter Question"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="68dp"
            android:background="@drawable/question_structure"
            />

        <ImageView
            android:id="@+id/menuImageView"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:src="@drawable/menu"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textViewOptionA"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:hint="Option A"
                android:background="@drawable/question_structure"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/textViewOptionB"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/question_structure"
                android:gravity="center_vertical"
                android:hint="Option B"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textViewOptionC"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:hint="Option C"
                android:textSize="16sp"
                android:background="@drawable/question_structure"
                />

            <TextView
                android:id="@+id/textViewOptionD"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:hint="Option D"
                android:textSize="16sp"
                android:background="@drawable/question_structure"
                />


        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/textViewCorrectAnswer"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:hint="Enter Correct Answer"
        android:textSize="16sp"
        android:layout_marginLeft="68dp"
        android:background="@drawable/question_structure"
        />


</LinearLayout>